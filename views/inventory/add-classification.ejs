<% if (title) { %>
  <h1 class="page-title"><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<!-- Display client-side validation errors -->
<%- messages() %>

<!-- Display server-side validation errors -->
<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<div class="form-container">
  <form action="/inv/add-classification" method="post" class="form">
    <label for="classification_name">Classification Name 
      <small>NAME MUST BE ALPHABETIC CHARACTERS WITH NO SPACES</small>
    <input type="text" id="classification_name" name="classification_name" pattern="^[A-Za-z0-9]+$" required></label>

    <button type="submit">Add Classification</button>
  </form>
</div>

